<?xml version='1.0' encoding='utf-8'?>
<widget id="au.com.opensyscon.tplusmobile" ios-CFBundleVersion="1.0.0" version="2.58.39" versionCode="25839" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<!-- ios-CFBundleVersion is used as the build number for iOS apps - if there are any errors uploading to iTunes you may need to increment this -->
    <name>Tplus Mobile</name>
    <description>
        Copyright Open Systems Consulting Pty Ltd 2017 (Tplus Mobile Application)
    </description>
    <author email="steven.green@opensyscon.com.au" href="http://www.oscsoftware.com.au">
        OSC Developer Team
    </author>
    <preference name="phonegap-version" value="cli-6.3.1" />
    <content src="index.html" />
    <access origin="*" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="23" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="StatusBarBackgroundColor" value="#FFFFFF"/>
	<preference name="StatusBarStyle" value="default" />
    <plugin name="cordova-plugin-device" source="npm" spec="1.1.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="4.3.0" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="2.3.0" />
    <plugin name="cordova-plugin-insomnia" source="npm" spec="4.2.0" />
    <plugin name="cordova-plugin-mauron85-background-geolocation" source="npm" spec="2.2.2" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="1.3.3" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="4.0.0" />
    <plugin name="cordova-plugin-velda-devicefeedback" source="npm" spec="0.0.2" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="1.3.0" />
    <plugin name="cordova-plugin-camera" source="npm" spec="2.1.0">
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.6.1" />
        <variable name="CAMERA_USAGE_DESCRIPTION" value="The app would like to access the camera when you attach photos to content." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="The app would like to access the photo library when you attach images to content." />
    </plugin>
    <plugin name="cordova-plugin-media" source="npm" spec="2.4.0" />
    <plugin name="phonegap-plugin-barcodescanner" source="npm" spec="6.0.2" />
    <plugin name="phonegap-plugin-push" source="npm" spec="1.5.3" />
    <plugin name="cordova-plugin-cipherlab-rs30" spec="https://github.com/mribbons/cordova-plugin-cipherlab-rs30" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="2.2.3" />
    <platform name="ios">
        <config-file parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
            <string>The app would like to access the camera when you attach photos to content.</string>
        </config-file>
        <config-file parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
            <string>The app would like to access the photo library when you attach images to content.</string>
        </config-file>
        <config-file parent="NSLocationWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
            <string>We may use GPS to determine your current location in order to update the despatch system at your office</string>
        </config-file>
        <icon height="57" src="resources/ios/icon/icon.png" width="57" />
